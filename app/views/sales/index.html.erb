<header>
<h1>Auctions</h1>	
</header>
<article>
	<table>
		<% @sales.each do |sale| %>
			<tr>
				<td class='date'><%= short_date(sale.date) %></td>
				<td class='house'><%= sale.house.code%></td>
				<td class='lots'><%= pluralize(sale.lots.count, 'lot') %></td>
				<td><%= pluralize(sale.vendors.uniq.count, 'vendor') %></td>
				<td><%= pluralize(sale.bids.count, 'bid') %></td>
				<td><%= pluralize(sale.bidders.uniq.count, 'bidder') %></td>
				<td class='admin-link'><%= link_to "View", sale_path(sale) %></td>
				<!-- below if admin -->
				<td class='admin-link'><%= link_to "Edit", edit_sale_path(sale) unless sale.frozen? %></td>
				<td class='admin-link'><%=link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure? ALL attached lots will be deleted!' } unless sale.frozen? %></td>
				<% if sale.active? %>
					<td>(active)</td>
				<% end %>
				<% if !sale.frozen? %>
					<td>(building)</td>
				<% end %>
				<% if sale.complete? %>
					<td>(completed)</td>
				<% end %>
				<!-- to here -->
			</tr>
		<% end %>
	</table>
</article>

<!-- again if admin -->
<% content_for(:side_links) do %>
	<%= render 'contextual_menu' %>
<% end %>
