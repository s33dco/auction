<% if object.errors.any? %>
<div class="errors">
  <header>
    <h2>
      That won't work for the <%= object.class.name.humanize.downcase %>.
    </h2>
    <h3>
      Please correct the <%= pluralize(object.errors.count, "problem") %>:
    </h3>
  </header>
  <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>