<div class="lot-item">
	<div class="specifics">
		<h3><%=simple_format(lot.description)%></h3>

	</div>
	<% if lot.pictures.attached? %>
		<div class="pictures">
			<% lot.pictures.each do |picture| %>
				<div class="lot-pictures">
					<%= image_tag picture %>
				</div>
			<% end %>
		</div>
	<% end %>
</div>