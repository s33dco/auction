<div class="lot-item">
	<div class="specifics">
		<p><%=simple_format(lot.description)%></p>

	</div>
	<% if lot.pictures.attached? %>
		<div class="pictures">
			<% lot.pictures.each do |picture| %>
				<div class="lot-pictures">
					<%= link_to image_path(url_for(picture)),class:'swipebox' do %>
						<%= image_tag picture.variant(resize: "600x") %>
					<% end %>
				</div>
			<% end %>
		</div>
	<% end %>
</div>