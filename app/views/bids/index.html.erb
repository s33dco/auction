<header>
	<h1>Active Sales</h1>
</header>
<article>
	<% if @sales.empty? %>
		<h2>There are no live sales</h2>
	<% else %>
		<table>
			<% @sales.each do |sale| %>
				<tr>
					<td><%= sale.house.name%></td>
					<td><%= nice_date(sale.date)%></td>
					<td class='money'><%= pluralize(sale.bids.count, 'bid')%></td>
					<td><%= link_to 'view bidding', bid_path(sale)%></td>
				</tr>
			<% end %>
		</table>
	<% end %>
</article>
