<header>
	<h1><%= @seller.first_and_last_name %></h1>
</header>
<article>
	<div class="client-details">
		<h3>Contact Details</h3>
		<%= render "client_contact" %>
		<p>You've auctioned <%= pluralize(@seller.lots.count, 'lot')%>, selling <%= @sold_lots.count %> for <%=show_money(@cash_made_by_seller)%></p>
	</div>

	<% unless @active_lots.empty? %>
		<div class="live-items">
			<h3>Lots in process</h3>
			<table>
				<% @active_lots.each do | lot| %>
					<tr>
						<td><%= short_date(lot.sale.date)%></td>
						<td><%= lot.sale.house.code%></td>
						<td><%= lot.lotnumber%></td>
						<td><%= link_to "#{lot.make_and_model}", lot_path(lot) %></td>
						<td><%= show_money(lot.reserve)%></td>
						<td><%= pluralize(lot.bids.count, 'bid')%></td>
						<td><%= show_money(lot.selling_price)%></td>
					</tr>
				<% end %>
			</table>
		</div>
	<% end %>

	<% unless @sold_lots.empty? %>
		<div class="sold-lots">
			<h3>Sold Lots <%= show_money(@cash_due_to_seller)%> to be paid.</h3>
			<table>
				<% @sold_lots.each do | lot| %>
					<tr>
						<td><%= short_date(lot.sale.date)%></td>
						<td><%= lot.sale.house.code%></td>
						<td><%= lot.lotnumber%></td>
						<td><%= link_to "#{lot.make_and_model}", lot_path(lot) %></td>
						<td><%= show_money(lot.soldat)%></td>
						<td><%= show_money(lot.sfee)%></td>
						<td><%= show_money(lot.seller_due)%></td>
					</tr>
				<% end %>
			</table>
		</div>
	<% end %>

	<% unless @unsold_lots.empty? %>
		<div class="unsold-lots">
			<h3>Unsold lots to be collected.</h3>
			<table>
				<% @unsold_lots.each do | lot| %>
					<tr>
						<td><%= short_date(lot.sale.date)%></td>
						<td><%= lot.sale.house.code%></td>
						<td><%= lot.lotnumber%></td>
						<td><%= link_to "#{lot.make_and_model}", lot_path(lot) %></td>
						<td><%= show_money(lot.reserve)%></td>
						<td><%= pluralize(lot.bids.count, 'bid')%></td>
						<td><%= show_money(lot.highest_bid)%></td>
					</tr>
				<% end %>
			</table>
		</div>

	<% end %>

</article>

<% content_for(:side_links) do %>
	<li class='contextual'>
		<%=link_to 'new seller', new_seller_path %>
	</li>	
<% end %>
