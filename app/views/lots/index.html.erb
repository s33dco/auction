<header>
	<h1>Report(lots post sale)</h1>
</header>
<article>
	<div class="filters">
		<p>filter by Buyer, Seller, Sale, Category</p>
	</div>
	<table>
		<tr>
			<td>Date</td>
			<td>Sale</td>
			<td>Lot #</td>
			<td>Item</td>
			<td class='money'>Reserve</td>
			<td class='money'>Max Bid</td>
			<td class='money'>Sold @</td>
			<td class='money'>Comms</td>
			<td></td>
		</tr>
		<% @lots.each do |lot| %>
		<tr>
			<td><%= short_date(lot.sale.date) %></td>
			<td><%= lot.sale.house.code %></td>
			<td><%= lot.lotnumber %></td>
			<td><%= link_to "#{lot.make_and_model}", lot_path(lot) %></td>
			<td class='money'><%=show_money(lot.reserve)%></td>
			<td class='money'>

				<%=show_money(lot.highest_bid_value)%>
					
				</td>
			<td class='money'><%= show_money(lot.soldat) %></td>
			<td class='money'><%= show_money(lot.commissions) %></td>
			<td><%=link_to 'edit', edit_lot_path(lot)%></td>
		</tr>
		<% end %>
	</table>
</article>

<!-- again if admin -->
<% content_for(:side_links) do %>
	<nav class='contextual'>
	<ul>
		<li>
			<%= link_to 'sold lots', filtered_lots_path(:sold)%>
		</li>
		<li>
			<%= link_to 'unsold lots', filtered_lots_path(:unsold )%>
		</li>
		<li>
			<%= link_to 'auctioned', filtered_lots_path(:auctioned)%>
		</li>

		<!-- todo refactor.... -->
			<%  if current_page?('/lots/filter/unsold') %>
		 		<li>
					<%=link_to 'download CSV', filtered_lots_path(:unsold, format: "csv") %>
				</li>
			<% end %>
			<%  if current_page?('/lots/filter/sold') %>
		 		<li>
					<%=link_to 'download CSV', filtered_lots_path(:sold, format: "csv") %>
				</li>
			<% end %>
			<%  if current_page?('/lots/filter/auctioned') %>
		 		<li>
					<%=link_to 'download CSV', filtered_lots_path(:auctioned, format: "csv") %>
				</li>
			<% end %>
		<!--  -->
		</ul>
	</nav>
<% end %>

<% content_for(:side_info) do %>
	<div class="infos">
		<table>
			<tr>
				<td>turnover</td>
				<td class='money'><%=show_money(@gross)%></td>
			</tr>
				<tr>
				<td>bid sales</td>
				<td class='money'><%=show_money(@total_sales)%></td>
			</tr>
				<tr>
				<td>seller's due</td>
				<td class='money'><%=show_money(@pay_out)%></td>
			</tr>
				<tr>
				<td>seller comm</td>
				<td class='money'><%=show_money(@seller_fees)%></td>
			</tr>
				<tr>
				<td>buyer comm</td>
				<td class='money'><%=show_money(@buyer_fees)%></td>
			</tr>
				<tr>
				<td>total profit</td>
				<td class='money'><%=show_money(@comm)%></td>
			</tr>
			</tr>
				<tr>
				<td>number of lots</td>
				<td class='money'><%= @how_many%></td>
			</tr>
			<tr>
				<td>av. profit/lot</td>
				<td class='money'><%=show_money(@average)%></td>
			</tr>
		</table>
	</div>
<% end %>
