<fieldset>
	<ul>
			<!-- maybe have a add in field to change sale -->
			<!-- Sale -->
			<!-- f.collection_select(:sale_id, Sale.open, :id , :house_and_date, prompt: "Choose Auction" -->
		<li>
			<label>Lot </label>
			<%=f.number_field :lotnumber%>
		</li>
		<li>
			<label>Category</label>
			<%= f.collection_select(:category_id, Category.alpha, :id , :title, prompt: "Choose Category" ) %>
		</li>
		<li>
			<label>Seller</label>
			<%= f.collection_select(:seller_id, Seller.by_code, :id , :code_and_name, prompt: "Choose Seller" ) %>
		</li>
		<li>
			<label>Manufacturer</label>
			<%=f.text_field :manufacturer%>
		</li>
		<li>
			<label>Model</label>
			<%=f.text_field :model%>
		</li>
		<li>
			<label>Reserve</label>
			<%=f.number_field :reserve, step: :any%>
		</li>
			<li>
				<label>Description</label>
			<%=f.text_area :description%>
		</li>
		<li>
			<label>Main Image</label>
			<%=f.file_field :image%>
		</li>
		<li>
			<label>Alternative Images</label>
			<%=f.file_field :pictures, multiple: true%>
		</li>
	</ul>

</fieldset>
		