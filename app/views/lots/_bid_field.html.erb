
<fieldset>
	<h3><%= show_money(@lot.selling_price)%> (<%= pluralize(@lot.bids.count, 'bid')%>)</h3>
	<% unless @lot.selling_price >= @lot.reserve %>
		<h3>Reserve not met</h3>
	<% end %>	
	<div class="actions">
		<%= form_with(model: Bid.new, url: bids_path, method: :post, local:true) do |f| %>	
	  	<%=f.hidden_field :lot_id , value: @lot.id %>
	  	<%= f.label "Your Maximum Bid Â£" %>
	  	<%=f.number_field :bidvalue %>
	    <%=f.submit "Bid", data: { confirm: 'Bids cannot be retracted, Are you sure ?' }%>
		<% end %>
	</div>
</fieldset>
