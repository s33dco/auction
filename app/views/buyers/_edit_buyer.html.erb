<fieldset>
	<ul>
		<li>
			<label>First Name</label>
			<%= f.text_field :firstname %>
		</li>
		<li>
			<label>Last Name</label>
			<%= f.text_field :lastname %>
		</li>
		<li>
			<label>Code</label>
			<%= f.text_field :code %>
		</li>
		<li>
			<label>Phone</label>
			<%=f.phone_field :phone %>
		</li>
		<li>
			<label>Email</label>
			<%= f.email_field :email %>
		</li>
		<li>
			<label>Commision</label>
			<%= f.number_field :commrate, step: 0.01  %>
		</li>
		<li class='boxes'>
			<label class='block'>Select auctions available to buyer.</label>
			<div class="checkbox-list">
				<%= f.collection_check_boxes(:house_ids, House.all, :id, :code_and_name) do |b| %>
				  <div class="row">
				    <%= b.label(class: "box-list") do %>
				    <div class="label">
				      <%= b.object.name %>
				      <div class="box">
				        <%= b.check_box(class: "box-list") %>
				      </div>
				      
				    </div>

				    <% end %>
				  </div>
				<% end %>
			</div>
		</li>
	</ul>
</fieldset>