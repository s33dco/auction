<article>
	<header>
		<h1>Add a New Buyer</h1>
	</header>
	<%= render 'shared/errors', object: @buyer %>
	<%= form_with(model: @buyer, local:true) do |f| %>
		<%= render "buyer_fields", f: f%>
		<%= f.submit %>
	<% end %>
</article>

<% content_for(:side_links) do %>
		<li class='contextual'>
			<%=link_to 'new buyer', new_buyer_path %>
		</li>	
<% end %>