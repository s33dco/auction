<header>
	<h1>Clients - Buyers</h1>
</header>
<article>
	<table>
		<% @buyers.each do |buyer| %>
			<tr>
				<td><%= buyer.first_and_last_name %></td>
				<td><%= buyer.code %></td>
				<td><%= buyer.phone %></td>
				<td><%= buyer.email %></td>
				<td><%= link_to 'edit', edit_buyer_path(buyer) %></td>
				<td><%=link_to 'delete', buyer, method: :delete, data: { confirm: 'Are you sure? All lots will be deleted!' } if buyer.bids.empty? %></td>
			</tr>
		<% end %>
	</table>
</article>